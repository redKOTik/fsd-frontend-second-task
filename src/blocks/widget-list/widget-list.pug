mixin widgetList(items, isSpecial)
  ul.widget-list
    each item in items
      li(class= item.isSpecial ? 'widget-list__element-special' : 'widget-list__element')(class=item.highlighted ? 'widget-list__element_highlighted js-widget-list__element_highlighted' : '')= item.text
        if item.block
          form.widget-list__input
            input.widget-list__email(placeholder="Email")
            button.widget-list__arrow(type="submit")