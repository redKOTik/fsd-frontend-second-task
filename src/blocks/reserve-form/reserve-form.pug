form.reserve-form
  include ../label/label
  include ../room-title/room-title
  div.reserve-form__title
    +roomTitle('888', '9 990₽', 'large', true)
  div.reserve-form__dates
    +label('прибытие', 'label_weight_bold label_position_inline')        
    +label('выезд', 'label_weight_bold')
    div.reserve-form__datepicker
      div.datepicker
  div.reserve-form__guest
    +label('гости', 'label_weight_bold')
    div.reserve-form__multiselect
      select.multiselect(value="Сколько гостей", name="counter")
        option(value="1") взрослые
        option(value="2") дети  
        option(value="0") младенцы
  div.reserve-form__pricelist
    include ./__service/reserve-form__service
    div.reserve-form__service-wrapper
      +service('9 990₽ х 4 суток', '39 960₽')
    div.reserve-form__service-wrapper
      +service('Сбор за услуги: скидка 2 179₽', '0₽')
        span.reserve-form__icon
    +service('Сбор за дополнительные\n услуги', '300₽')
      span.reserve-form__icon
  div.reserve-form__totalprice
    span.reserve-form__text Итого 
    div.reserve-form__border
    span.reserve-form__text 38 081₽
  include ../button/button
  +button('забронировать','button_size_wide button_height_large button_bg_purple button_color_white button_without-border button_focused')
    span.button__icon