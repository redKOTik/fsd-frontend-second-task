form.find-room-form.js-find-room-form
  include ../label/label
  include ../title/title
  div.find-room-form__title
    +title('Найдём номера под ваши пожелания')
  div.find-room-form__dates    
    +label('прибытие', 'label_weight_bold label_position_inline')        
    +label('выезд', 'label_weight_bold')
    div.find-room-form__datepicker-plugin
      - var options = '{"mode":"Range"}';
      div.datepicker-plugin.js-datepicker-plugin(data-options=options)
  div.find-room-form__guest        
    +label('гости', 'label_weight_bold')
    div.find-room-form__multiselect-plugin
      - options = '{"state":"Collapsed","options":[{"text":"взрослые","value":"0","unique":false},{"text":"дети","value":"0","unique":false},{"text":"младенцы","value":"0","unique":true}],"title":"Сколько гостей","totalTextTitle":"гостя"}';
      select.multiselect-plugin.js-multiselect-plugin(value="Сколько гостей", name="counter", data-options=options)
        option(value="0") взрослые
        option(value="0") дети  
        option(value="0") младенцы
  include ../button/button
  +button('подобрать номер','button_size_wide button_height_large button_bg_purple button_color_white button_without-border button_focused')
    span.button__icon