doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name="keywords" content="html, css, javascript, page, fsd, work")
    meta(name="description" content="Training project with hotel room search pages")
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel="icon", href="assets/favicon.ico", type="image/ico")
    title Headers and Footers
  body
    div.wrapper-haf-logo
      include ../../blocks/logo/logo
      +logo()
    include ../../blocks/button/button  
    div.header-container
      include ../../blocks/header/header
      div.header-wrapper
        +header(false)
      +header(true)
    div.footer-container
      div.footer-wrapper
        include ../../blocks/footer/footer 
      footer.footer-info
        div.footer-info__logo
          img(src="assets/img/logo/_bg/logo-color.svg", alt="logo")
        div.footer-info__bar
          include ../../blocks/copyright-bar/copyright-bar      
          +copyright(true)