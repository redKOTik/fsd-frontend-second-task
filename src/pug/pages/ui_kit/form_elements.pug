        div.custom-slider.field__custom-slider
      div.field.field_mb-40
        +label('buttons', 'label_bold field__label')        
        div.field__custom-button-wrapper
          button.button.button_white.button_bg-purple.button_w-99 CLICK ME
          button.button.button_white.button_bg-purple.button_disabled.button_w-99  CLICK ME
        div.field__custom-button-wrapper
          button.button.button_purple.button_bg-white.button_with-border.button_w-99  CLICK ME
          button.button.button_purple.button_bg-white.button_with-border.button_disabled.button_w-99  CLICK ME
        div.field__custom-button-wrapper
          button.button.button_without-border.button_purple.button_bg-white.button_h-15 CLICK ME
          button.button.button_without-border.button_gray.button_bg-white.button_h-15 CLICK ME        
        include ../../blocks/button/button          
        +button('перейти к оплате', 'button_wide')
          span.icon-button          
      div.field
        +label('pagination', 'label_bold field__label')        
        include ../../blocks/pagination/pagination       
