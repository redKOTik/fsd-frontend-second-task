        div.field__datepicker-wrapper.font-montserrat
          select.datepicker-range
      div.field.field_mb-40
        +label('filter date dropdown', 'label_bold')
        div.field__datepicker-wrapper.font-montserrat.custom-width
          select.datepicker-range-filter
      div.field
