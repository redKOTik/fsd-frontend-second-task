        +label('Radio Buttons ', 'label_bold field__label')
        include ../../blocks/radio-button/radio-button
        +radio()
      div.field.field_mb-40
        +label('Toggle', 'label_bold field__label')
        include ../../blocks/toggle-button/toggle-button
        div.field__toggle-wrapper
          +toggle('Получать спецпредложения', 'checked')
        +toggle('Получать спецпредложения')          
      div.field.field_mb-40
        +label('like button', 'label_bold field__label')        
        include ../../blocks/like-button/like-button
        div.field__like-wrapper
          +like('2')
        +like('12', 'checked')          
      div.field
        +label('rate button', 'label_bold field__label')        
        div.field__rate-wrapper
          include ../../blocks/rate/rate
          +rate('rate1', [{id: 'y5', checked:"checked"}, {id: 'y4'}, {id: 'y3'}, {id: 'y2'}, {id: 'y1'}])
          +rate('rate2', [{id: 'x5'}, {id: 'x4', checked:"checked"}, {id: 'x3'}, {id: 'x2'}, {id: 'x1'}])
    div.element-column
      div.field.field_mb-40.custom-width
        +label('default', 'label_normal label_position-right label_slider')
