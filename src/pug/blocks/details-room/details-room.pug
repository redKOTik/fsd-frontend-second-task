div.details-room
  include ../../../blocks/label/label  
  div.photo
    div.photo__item.photo__item_bg-image-0 
    div.photo__item.photo-column
      div.photo-column__item.photo-column__item_matrix.photo-column__item_bg-image-1 
      div.photo-column__item.photo-column__item_bg-image-2
  div.details-room__wrapper
    div.details
      div.details__row
        include ../../../blocks/feature/feature     
        div.details__item
          +label('Сведения о номере', 'label_for-details')
          div.details__quality
            +quality('Комфорт', 'Шумопоглощающие стены', 'quality__icon_smile')  
          div.details__quality
            +quality('Удобство', 'Окно в каждой из спален', 'quality__icon_city')
          div.details__quality
            +quality('Уют', 'Номер оснащён камином', 'quality__icon_fire')
        div.details__item
          +label('Впечатления от номера', 'label_for-details')
          div.details__diagram.diagram
            div.diagram_yellow
            div.diagram_purple
            div.diagram_green
            div.diagram__text
              p.diagram__count 260
              p.diagram__name голосов
          div.details__list
            include ../../../blocks/bullet-list-colored/bullet-list-colored
            +bulletColored([{ text: 'Великолепно', color: 'yellow' },
              { text: 'Хорошо', color: 'green' },
              { text: 'Удовлетворительно', color: 'purple' },
              { text: 'Разочарован', color: 'black' }])
          div.details__button.hide
            include ../../../blocks/button/button
            +button('форма бронирования', 'button_wide')
      div.details__row
        include ../../../blocks/post/post
        div.details__item
          +label('2 отзыва', 'label_normal label_position-right label_transform-none')
          +label('Отзывы посетителей номера', 'label_for-details')
          div.details__post
            +post('Мурад Сарафанов', '5 дней назад', '12', 'checked', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.', 'post__icon_avatar1')
          div.details__post
            +post('Патрисия Стёклышкова', 'Неделю назад', '2', undefined, 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент', 'post__icon_avatar2')  
      div.details__row
        include ../../../blocks/bullet-list/bullet-list
        div.details__item
          +label('Правила', 'label_for-details')
          div.details__bullet
            +bullet(['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'])
        div.details__item
          +label('Отмена', 'label_for-details')
          div.details__info
            p.info Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
    div.reserve-form__wrapper.modal
      include ../../../blocks/reserve-form/reserve-form
div.overlay